<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ksytech.zjbspot">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name="com.ksytech.zjbspot.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ksytech.zjbspot.activity.RealNameActivity" />
        <activity android:name="com.ksytech.zjbspot.activity.CameraScanActivity" />
        <activity android:name="com.ksytech.zjbspot.activity.PositiveActivity" />
        <activity android:name="com.ksytech.zjbspot.activity.OtherSideActivity" />
        <activity android:name="com.ksytech.zjbspot.activity.BandShowActivity"></activity>
        <activity android:name="com.ksytech.zjbspot.activity.BankScanActivity"/>
    </application>

</manifest>